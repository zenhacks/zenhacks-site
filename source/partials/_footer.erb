<footer id="footer" class="clearfix">

	<div class="container">

		<div class="three-fourth">

			<nav id="footer-nav" class="clearfix">

				<ul>
          <% data.nav.each do |page| %>
            <li><a href="<%= page.path %>"><%= page.name %></a></li>
          <% end %>
				</ul>
				
			</nav><!-- end #footer-nav -->

			<ul class="contact-info">
        <li class="address"><%= data.company.address %></li>
        <li class="phone"><%= data.company.phone %></li>
        <li class="email"><a href="mailto:<%= data.company.email %>"><%= data.company.email %></a></li>
			</ul><!-- end .contact-info -->
			
		</div><!-- end .three-fourth -->

		<div class="one-fourth last">

			<span class="title">Stay connected</span>

			<ul class="social-links">
				<li class="twitter"><a href="#">Twitter</a></li>
				<li class="facebook"><a href="#">Facebook</a></li>
			</ul><!-- end .social-links -->

		</div><!-- end .one-fourth.last -->
		
	</div><!-- end .container -->

</footer><!-- end #footer -->

<footer id="footer-bottom" class="clearfix">

	<div class="container">

		<ul>
			<li>EasyMoo &copy; 2012</li>
		</ul>

	</div><!-- end .container -->

</footer><!-- end #footer-bottom -->
